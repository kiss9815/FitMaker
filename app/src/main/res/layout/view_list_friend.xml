<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="@dimen/fit_list_friend">


    <com.mikhaellopez.circularimageview.CircularImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="@dimen/fit_friend_image_btn_width"
        android:layout_height="@dimen/fit_friend_image_btn_width"
        android:id="@+id/image_profile"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_centerVertical="true"
        android:src="@drawable/default_friend"
        app:civ_border = "false"
        app:civ_shadow="true"
        app:civ_shadow_radius="1"
        app:civ_shadow_color="@color/fit_circle_image_shadow"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_name"
        android:text="엄준태"
        android:layout_toRightOf="@+id/image_profile"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_friend_profile"
        android:layout_alignParentRight="true"
        android:text="@string/see_friend_profile"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:background="@null"
        />


</RelativeLayout>