<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="190dp"
            android:layout_height="200dp">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:id="@+id/image_youtube"

                />

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:orientation="vertical"
                android:layout_below="@+id/image_youtube"
                >
                    <me.grantland.widget.AutofitTextView
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_content_name"
                        android:layout_gravity="center_vertical"
                        android:singleLine="true"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/fit_space"
                        android:layout_marginBottom="@dimen/fit_space"
                        android:textSize="20sp"
                        android:text="이름"/>

                    <me.grantland.widget.AutofitTextView
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_content_benefit_part"
                        android:layout_gravity="center_vertical"
                        android:textSize="17sp"
                        android:singleLine="true"
                        android:gravity="center"
                        android:text="운동 부위"/>

            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>