<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/FitGray"
    tools:context="com.juntcompany.fitmaker.play.result.reward.RewardActivity">


    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/toolbar"
        android:id="@+id/reward_toolbar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/reward_toolbar"
        >

        <ImageView
            android:layout_width="250dp"
            android:layout_height="220dp"
            android:id="@+id/image_badge"
            android:layout_gravity="center"

            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fit_space"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/img_badge_name"
                android:id="@+id/image_reward_card"
                android:layout_marginBottom="@dimen/fit_space"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_reward_coment"
                android:layout_centerHorizontal="true"
                android:text="축하합니다"
                android:layout_marginTop="42dp"
                android:layout_gravity="center"
                />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="짝짝짝! 수고하셨습니다. \n\n 매일매일 핏메이커와 함께라면 \n\n원하는 핏에 가까워질 수 있을거에요!"
            android:gravity="center"
            android:layout_marginTop="@dimen/fit_space"
            />


    </LinearLayout>


    <Button
        android:layout_width="@dimen/fit_red_btn_width"
        android:layout_height="@dimen/fit_red_btn_height"
        android:layout_gravity="center"
        android:text="확인"
        android:textColor="@color/fit_white"
        android:textSize="@dimen/fit_btn_text_size_complete"
        android:id="@+id/btn_ok"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_rounded_pink"
        android:layout_marginBottom="@dimen/btn_fit_complete_margin"
        />

</RelativeLayout>
