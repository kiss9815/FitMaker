<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="horizontal" android:layout_width="match_parent"
android:layout_height="@dimen/fit_list_friend">


<ImageView
    android:layout_width="@dimen/fit_friend_image_btn_width"
    android:layout_height="@dimen/fit_friend_image_btn_width"
    android:id="@+id/image_profile"
    android:layout_marginLeft="@dimen/fit_friend_left_margin"
    android:layout_alignParentLeft="true"
    android:layout_centerVertical="true"
    android:src="@android:mipmap/sym_def_app_icon"
    />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/text_email"
    android:text="엄준태"
    android:layout_marginLeft="@dimen/fit_space"
    android:layout_toRightOf="@+id/image_profile"
    android:layout_centerVertical="true"
    />



<Button
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:id="@+id/btn_add_friend"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:layout_marginRight="@dimen/fit_friend_right_margin"
    android:background="@drawable/friend_add"
    />


</RelativeLayout>