<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
android:orientation="horizontal" android:layout_width="match_parent"
android:layout_height="@dimen/fit_list_friend">


<com.mikhaellopez.circularimageview.CircularImageView

    android:layout_width="@dimen/fit_friend_image_btn_width"
    android:layout_height="@dimen/fit_friend_image_btn_width"
    android:id="@+id/image_profile"
    android:layout_marginLeft="@dimen/fit_friend_left_margin"
    android:layout_alignParentLeft="true"
    android:layout_centerVertical="true"
    android:src="@drawable/default_friend"
    app:civ_border = "false"
    app:civ_shadow="true"
    app:civ_shadow_radius="1"
    app:civ_shadow_color="@color/fit_circle_image_shadow"
    />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/text_friend_name"
    android:text="엄준태"
    android:layout_marginLeft="@dimen/fit_space"
    android:layout_toRightOf="@+id/image_profile"
    android:layout_centerVertical="true"
    />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_friend_State"
        android:textColor="@color/FitRed"
        android:textSize="@dimen/fit_text_size"
        android:layout_toLeftOf="@+id/btn_add_friend"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/fit_space"
        />


<Button
    android:layout_width="40dp"
    android:layout_height="40dp"

    android:layout_marginLeft="@dimen/fit_space"
    android:id="@+id/btn_add_friend"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:layout_marginRight="@dimen/fit_friend_right_margin"
    android:background="@drawable/btn_friend_add_selector"
    />


</RelativeLayout>